<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), role:'form') do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, placeholder: 'Full Name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'Email will be username', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control' %>
    </div>
    <br/>
    <%= f.submit t("home.index.label.register"), class: 'btn btn-lg btn-primary btn-block' %>

<% end %>