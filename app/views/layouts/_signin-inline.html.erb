<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'navbar-form', role: 'form'}) do |f| %>

    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, :autofocus => true , placeholder:'Email', class: 'form-control input-sm' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password , placeholder:'Password', class: 'form-control input-sm' %>
    </div>

    <%= f.submit t("home.index.label.login"), class: 'btn btn-sm btn-primary' %>

<% end %>
