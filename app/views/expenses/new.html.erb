<div class="page-header">
  <h1>New Expense</h1>
</div>

<%= form_for @expense do |f| %>
    <%= f.label :name, 'Title' %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, cols: 50 %>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
    <%= f.submit 'Create Expense' %>
<% end %>
